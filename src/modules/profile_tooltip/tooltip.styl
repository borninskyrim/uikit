tooltip(width=200px,height=100px,isHover = false,color,color-hover)
    width width
    height height
    if(!isHover)
      background-color color
    else
      background-color color-hover  
    border-radius 7px
    position relative
   
    &:before
        content ""
        if(!isHover)
          border 7px solid color
        else
          border 7px solid color-hover
        margin-left -10px
        position absolute
        display inline-block
        vertical-align middle
        border-left-width 0
        border-top-color transparent
        border-bottom-color transparent
        top 39px
        left 3px
        border-right-radius 100%
.profile
    display inline-block
    position relative
    margin-bottom 27px
    
.photo
  float left
  width 84px
  height 84px
  border 5px solid #e5e5e5
  border-radius 50%
  position absolute
  bottom 1px
  
        
    
.tooltip
    float right
    position absolute
    left 105px
    tooltip(163px,93px,false,#4eb7a8, #e5e5e5)
  
    p
      text-align center
      color white
    
.tooltip:hover
    tooltip(163px,93px,true,#4eb7a8, #e5e5e5)
    p
      color black
      
