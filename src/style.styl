
    @import './modules/profile_tooltip/tooltip'
   
    .circled_button
        margin-left 20px
        width 118px
        height 32px
        border none
        background-color #4eb7a8
        cursor url('img/hand.png'), auto
        overflow hidden
    button.circled_button:active
        outline: none;
    button.circled_button:focus
        outline: none;
   
    #lookatmeiamhere
        corsor pointer
        background-color red
        width 48px
        height 48px
        opacity 0.0
        position absolute
        border-radius 100px
        transition opacity 0s
        transform scale(0.5,0.5)
        background-clip content-box
    .down #lookatmeiamhere
        transform scale(1,1)
        opacity .7
        transition-duration 0.5s
        background-origin content-box
        